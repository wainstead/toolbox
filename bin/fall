#!/bin/bash

if [ $# -lt 1 ]; then
   echo "Usage: $0 searchterm"
   exit
fi


PROJECTDIR=/home/swain/public_html/projects
echo "searching on $1..."

ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_gallery 
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_core    
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_cart    
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_products
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_conf    
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_ofs     
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_www     
ack --nogroup --nocolor --text $1 $PROJECTDIR/mpa_static  

